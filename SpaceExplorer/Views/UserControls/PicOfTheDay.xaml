<UserControl x:Class="SpaceExplorer.Views.UserControls.PicOfTheDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceExplorer.Views.UserControls"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/Style/PicOfTheDay.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <TextBlock Text="{Binding ImageTitle}"/>
        <Image Source="{Binding ImageUri}" Style="{StaticResource PicOfTheDay}" />
        <TextBlock Text="{Binding ImageDescription}">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" Color="Blue" BlurRadius="10" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>

</UserControl>
