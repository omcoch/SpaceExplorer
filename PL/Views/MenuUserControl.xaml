<UserControl x:Class="PL.Views.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TabControl Style="{DynamicResource MahApps.Styles.TabControl.AnimatedSingleRow}">
        <TabItem Header="&lt;Welcome&gt;">
            <local:WelcomeUserControl/>
        </TabItem>
        <TabItem Header="&lt;Daily Image&gt;">
            <local:DailyImageUserControl/>
        </TabItem>
        <TabItem Header="&lt;Search&gt;">
            <local:SearchUserControl/>
        </TabItem>
        <TabItem Header="&lt;Asteroids&gt;">
            <local:AsteroidsUserControl/>
        </TabItem>
        <TabItem Header="&lt;Planets&gt;">
            <local:PlanetsUserControl/>
        </TabItem>
    </TabControl>
</UserControl>
