<UserControl x:Class="PL.Views.AsteroidDDetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views" xmlns:viewmodels="clr-namespace:PL.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AsteroidVM}"
             mc:Ignorable="d" >
    <Grid>
        <ListBox ItemsSource="{Binding AsteroidResult, UpdateSourceTrigger=PropertyChanged}" d:ItemsSource="{d:SampleData ItemCount=5}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Purple">
                        <Label Content="Name: "/>
                        <TextBlock Text="{Binding Name}"/>

                        <Label Content="Diameter: "/>
                        <TextBlock Text="{Binding Diameter}"/>

                        <Label Content="IsDangerous ? "/>
                        <TextBlock Text="{Binding IsDangerous}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox ItemsSource="{Binding AsteroidCloseApproachResult, Mode=OneWay}" d:ItemsSource="{d:SampleData ItemCount=5}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="WhiteSmoke">
                        <Label Content="Date: "/>
                        <TextBlock Text="{Binding Date}"/>

                        <Label Content="Distance (km): "/>
                        <TextBlock Text="{Binding MissDistanceKm}"/>

                        <Label Content="Velocity (km): "/>
                        <TextBlock Text="{Binding VelocityKmPerH}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
